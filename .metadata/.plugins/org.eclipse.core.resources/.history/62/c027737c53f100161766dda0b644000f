package assignment2;

import java.util.*;

public class Decoder {
	String guess;
	String secret;
	int white;
	int black;
	
	public Decoder(String guess, String secret) {
		this.guess = guess;
		this.secret = secret;
		this.white = 0;
		this.black = 0;
	}
	
	public void setNewGuess(String guess) {
		this.guess = guess;
	}
	
	public void makeClue() {
		System.out.println(guess + " " +  secret);
		if(guess.equals(secret)) {
			System.out.println("You win!");
		}
	}
}
