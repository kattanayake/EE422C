package assignment2;

import java.util.*;

public class Decoder {
	String guess;
	String secret;
	int white;
	int black;
	
	public Decoder(String secert, String guess) {
		this.guess = guess;
		this.secret = secret;
		this.white = 0;
		this.black = 0;
		System.out.println(this.secret);
	}
	
	public void setNewGuess(String guess) {
		this.guess = guess;
	}
	
	public void makeClue() {
		if(guess.equals(secret)) {
			System.out.println("You win!");
		}
	}
}
