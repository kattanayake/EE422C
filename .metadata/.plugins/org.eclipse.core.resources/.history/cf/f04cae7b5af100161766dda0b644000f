package assignment2;

import java.util.*;

public class Decoder {
	private String guess;
	private String secret;
	private int white;
	private int black;
	
	public Decoder(String secret, String guess) {
		this.secret = secret;
		this.guess = guess;
		this.white = 0;
		this.black = 0;
	}
	
	public void setNewGuess(String guess) {
		this.guess = guess;
	}
	
	public void makeClue() {
		if(guess.equals(secret)) {
			System.out.println("You win!");
		}
		else {
			findNumBlacks(secret, guess);
			//findNumWhites(secret, guess);
		}
	}
	
	public int getBlack() {
		return black;
	}
	
	public int getWhite() {
		return white;
	}
		
	private void findNumBlacks(String secret, String guess) {
		this.black = 0;
		
		for (int i = 0; i < secret.length(); i++) {
			if(secret.charAt(i) == guess.charAt(i)) {
				this.black++;
			}
		}
	}
	
	public void numWhites() {
		
	}
}
